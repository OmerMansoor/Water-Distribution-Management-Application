<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivBottleImage"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/large" />
            <TextView
                android:id="@+id/tvVendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Vname"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivBottleImage"/>

            <TextView
                android:id="@+id/tvBottleSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Size"
                android:layout_below="@id/tvVendorName"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivBottleImage"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="price"
                android:layout_below="@id/tvBottleSize"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivBottleImage"/>
            <TextView
                android:id="@+id/tvItemsInStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Stock"
                android:layout_below="@id/tvPrice"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivBottleImage"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>
